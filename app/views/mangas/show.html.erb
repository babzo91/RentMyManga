<div class="row align-items-start">
  <!-- Première carte -->
<% if @user_con == @user %>
<div class="col-3 p-4 m-4 order-2">
    <div class="card">
      <div class="card-body sh">
        <div class="text-center" style="top: 140px;">
          <p>Mis en location par vous</p>
          <p><%= image_tag @user.profile_picture, height: 50, width: 50, crop: :fit %></p>
          <p>Prix/Jour: <%= "#{@manga.price_per_day} €"%></p>
          <p><button class="btn btn-primary"><%= link_to "Modifier", edit_manga_path(@manga), class: "text-dark text-decoration-none" %></button></p>
         <p><button class="btn btn-danger"><%= link_to "Supprimer", manga_path(@manga), data: {turbo_method: :delete, turbo_confirm: "Etes vous sur ?"}, class: "text-dark text-decoration-none" %></button></p>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <div class="col-3 p-4 m-4 order-2">
    <div class="card">
      <div class="card-body sh">
        <div class="text-center" style="top: 140px;">
          <p>Mis en location par <%= "#{@user.first_name}" %> <%= "#{@user.last_name}" %></p>
          <%= image_tag @user.profile_picture, height: 50, width: 50, crop: :fit %>
          <p>Prix/Jour: <%= "#{@manga.price_per_day} €"%></p>
          <p><%= link_to "Louer ce manga", new_manga_booking_path(@manga), class: "btn btn-dark"%></p>
        </div>
      </div>
    </div>
  </div>
  <% end %>

  <!-- Deuxième carte -->
<%= link_to mangas_path do %>
  <button type="button" class="btn btn-secondary mt-3">
    <i class="fas fa-arrow-left"></i> Retour à la liste des mangas
  </button>
<% end %>
  <div class="col-8 p-4 m-4 order-1 d-flex">
        <%= cl_image_tag @manga.photo.key, height: 300, width: 300, crop: :fit, radius: 5 %>
        <div class="ms-5">
        <h1><strong><%= @manga.title %></strong></h1>
        <div class="mt-3">
          <h4>Synopsis:</h4>
          <p><em><%= @manga.synopsis %></em></p>
          <h4>Auteur: <%= @manga.author %></h4>
          <h4>Catégorie: <%= @manga.category %></h4>
          </div>
      </div>
  </div>
</div>
