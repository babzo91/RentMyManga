<header>
  <%= render "shared/navbar" %>
</header>

<body>
<div class="main-container">
  
  <% @mangas.each do |manga| %>
    <% manga_image = @user["data"][0]["images"]["jpg"]["image_url"] %>
    <div class="manga-card">
      <%= image_tag manga_image %>
      <h2><%= manga.title %></h2>
    </div>
  <% end %>
</div>
</body>

